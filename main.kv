        id: real_otp
        color: (1,1,1,0)
        halign: 'center'

    MDLabel:
        id: message
        pos_hint: {"center_x": .8, "center_y": .4}

    MDLabel:
        text: "Enter The OTP to Login"
        color: (99/255,99/255,99/255,1)
        font_size: 18
        bold: True
        pos_hint: {"center_x": .6, "center_y": .8}

    MDTextField:
        id: entered_otp
        hint_text: "Enter OTP"
        pos_hint: { "center_x": .5, "center_y": .6}
        size_hint_x: .8
        icon_right: "call"
        icon_right_color: app.theme_cls.primary_color

    MDRectangleFlatButton:
        text: "Verify!"
        text_style: "H5"
        size_hint: .8, .1
        pos_hint: {"top": .32, "right": .9}
        on_release:
            app.login_otp.verify(entered_otp.text, real_otp.text)

    MDIconButton:
        text : "BACK"
        icon: "arrow-left"
        text_color : (1,1,0,1)
        pos_hint: {"top": .98, "right": .2}
        on_release : root.manager.current = "Service_selection_screen"

    MDFlatButton:
        text: "Resend OTP"
        text_color: (0,0,0,1)
        text_style: "H6"
        size_hint:.5, .04
        pos_hint: {"top": .52, "right": .95}
        on_release:
            app.login_otp.verify(entered_otp.text, real_otp.text)


